{% extends 'layouts/auth.twig' %}

{% block title %}Reset Password{% endblock %}

{% block content %}
    <div class="card w-full bg-base-100 border border-base-300 shadow-md">
        <div class="admin-card-body">
            <div class="mb-4">
                <h2 class="text-2xl font-semibold tracking-tight">Set a new password</h2>
                <p class="mt-1 text-sm text-base-content/60">Choose a strong password for your account.</p>
            </div>

            {% include 'partials/toast.twig' with { error: error } only %}

            <form method="POST" action="/admin/reset-password" novalidate class="space-y-4">
                <input type="hidden" name="_token" value="{{ csrf_token }}">
                <input type="hidden" name="token" value="{{ token }}">

                <div class="admin-form-control">
                    <label class="label" for="reset_password">
                        <span class="label-text font-semibold">New password</span>
                        <span class="text-error">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-base-content/60">
                            <i class="fa-solid fa-lock text-lg"></i>
                        </span>
                        <input
                            type="password"
                            id="reset_password"
                            name="user[password]"
                            required
                            class="admin-input pl-10 {% if errors['user.password'] %}input-error{% endif %}"
                            placeholder="Enter a new password"
                        />
                    </div>
                    {% if errors['user.password'] %}
                        <label class="label"><span class="label-text-alt text-error">{{ errors['user.password'] }}</span></label>
                    {% endif %}
                </div>

                <div class="admin-form-control">
                    <label class="label" for="reset_password_confirm">
                        <span class="label-text font-semibold">Confirm password</span>
                        <span class="text-error">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-base-content/60">
                            <i class="fa-solid fa-lock text-lg"></i>
                        </span>
                        <input
                            type="password"
                            id="reset_password_confirm"
                            name="user[password_confirm]"
                            required
                            class="admin-input pl-10 {% if errors['user.password_confirm'] %}input-error{% endif %}"
                            placeholder="Re-enter your new password"
                        />
                    </div>
                    {% if errors['user.password_confirm'] %}
                        <label class="label"><span class="label-text-alt text-error">{{ errors['user.password_confirm'] }}</span></label>
                    {% endif %}
                </div>

                <button type="submit" class="btn btn-primary w-full">Update password</button>
            </form>
        </div>
    </div>

    <div class="mt-6 text-center space-y-2">
        <div class="text-sm text-base-content/60">
            <a href="/admin/login" class="link link-hover no-underline">Back to login</a>
        </div>
    </div>
{% endblock %}
