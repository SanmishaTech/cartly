{% extends 'layouts/auth.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block content %}
    <div class="card w-full bg-base-100 border border-base-300 shadow-md">
        <div class="admin-card-body">
            <div class="mb-4">
                <h2 class="text-2xl font-semibold tracking-tight">Reset your password</h2>
                <p class="mt-1 text-sm text-base-content/60">Enter your email and we will send a reset link.</p>
            </div>

            {% include 'partials/toast.twig' with { error: error } only %}

            <form method="POST" action="/admin/forgot-password" novalidate class="space-y-4">
                <input type="hidden" name="_token" value="{{ csrf_token }}">

                <div class="admin-form-control">
                    <label for="forgot_email" class="label">
                        <span class="label-text font-semibold">Email address</span>
                        <span class="text-error">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-base-content/60">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="2" y="4" width="20" height="16" rx="2"/>
                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                            </svg>
                        </span>
                        <input
                            type="email"
                            id="forgot_email"
                            name="user[email]"
                            required
                            value="{{ data.user.email ?? '' }}"
                            class="admin-input pl-10 {% if errors['user.email'] %}input-error{% endif %}"
                            placeholder="admin@company.com"
                        />
                    </div>
                    {% if errors['user.email'] %}
                        <label class="label"><span class="label-text-alt text-error">{{ errors['user.email'] }}</span></label>
                    {% endif %}
                </div>

                <button type="submit" class="btn btn-primary w-full">Send reset link</button>
            </form>
        </div>
    </div>

    <div class="mt-6 text-center space-y-2">
        <div class="text-sm text-base-content/60">
            <a href="/admin/login" class="link link-hover no-underline">Back to login</a>
        </div>
    </div>
{% endblock %}
