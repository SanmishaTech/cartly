{% extends 'layouts/dashboard.twig' %}

{% block title %}Packages{% endblock %}
{% block page_title %}Packages{% endblock %}

{% block content %}
<div class="w-full">
    <div class="card bg-base-100 border border-base-300">
        <div class="admin-card-body">
            <div class="flex flex-wrap items-center justify-between gap-3 mb-4">
                <h2 class="card-title">Packages</h2>
                <a href="/admin/packages/create" class="btn btn-primary btn-sm">
                    <i class="fa-solid fa-plus text-sm mr-2"></i>
                    Add Package
                </a>
            </div>

            <div class="card bg-base-200/40 border border-base-300 mb-4">
                <div class="admin-card-body">
                    <h3 class="admin-section-title mb-2">Filters</h3>
                    <form method="GET" action="/admin/packages" class="flex flex-wrap gap-2 items-center">
                        <input type="hidden" name="sort" value="{{ pager.sort }}">
                        <input type="hidden" name="dir" value="{{ pager.dir }}">
                        <input
                            type="text"
                            name="search"
                            value="{{ pager.query.search ?? '' }}"
                            placeholder="Search by name"
                            class="admin-input sm:w-56"
                        />
                        <button type="submit" class="btn btn-accent btn-sm btn-sm">Filter</button>
                    </form>
                </div>
            </div>

            {% if pager.items|length %}
            <div class="overflow-x-auto">
                <table class="admin-table">
        <thead>
            <tr>
                <th>
                    <a href="{{ pager.sortUrls.name }}" class="link link-hover">
                        Name{% if pager.sort == 'name' %} {{ pager.dir == 'asc' ? '▲' : '▼' }}{% endif %}
                    </a>
                </th>
                <th>1 Month</th>
                <th>3 Months</th>
                <th>6 Months</th>
                <th>12 Months</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for package in pager.items %}
                <tr class="hover">
                    <td>
                        <div class="font-semibold">{{ package.name }}</div>
                    </td>
                    <td>{{ package.cost_1_month|currency }}</td>
                    <td>{{ package.cost_3_month|currency }}</td>
                    <td>{{ package.cost_6_month|currency }}</td>
                    <td>{{ package.cost_12_month|currency }}</td>
                    <td>
                        {% if package.active %}
                            <div class="badge badge-success">Active</div>
                        {% else %}
                            <div class="badge badge-ghost">Inactive</div>
                        {% endif %}
                    </td>
                    <td class="text-right">
                        <div class="flex justify-end gap-2">
                            <a href="/admin/packages/{{ package.id }}/edit" class="btn btn-sm btn-outline">
                                Edit
                            </a>
                            <form method="POST" action="/admin/packages/{{ package.id }}/delete" class="inline" onsubmit="return confirm('Delete this package?')">
                                <input type="hidden" name="_token" value="{{ csrf_token }}">
                                <button type="submit" class="btn btn-sm btn-error btn-outline">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
                </table>
                <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                    <div class="text-sm text-base-content/70">
                        Showing {{ pager.rangeStart }}-{{ pager.rangeEnd }} of {{ pager.total }}
                    </div>
                    <div class="join">
                        {% if pager.pageUrls.prev %}
                            <a href="{{ pager.pageUrls.prev }}" class="btn btn-sm join-item">Previous</a>
                        {% else %}
                            <button class="btn btn-sm join-item btn-disabled">Previous</button>
                        {% endif %}
                        <button class="btn btn-sm join-item btn-disabled">Page {{ pager.page }} of {{ pager.lastPage }}</button>
                        {% if pager.pageUrls.next %}
                            <a href="{{ pager.pageUrls.next }}" class="btn btn-sm join-item">Next</a>
                        {% else %}
                            <button class="btn btn-sm join-item btn-disabled">Next</button>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% else %}
            <div class="admin-card-body text-center py-12">
                <i class="fa-solid fa-box text-6xl mx-auto text-base-content/30 mb-4"></i>
                <h3 class="text-xl font-semibold mb-2">No packages yet</h3>
                <p class="text-base-content/60 mb-4">Create your first subscription package</p>
                <a href="/admin/packages/create" class="btn btn-primary btn-sm">Create Package</a>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
