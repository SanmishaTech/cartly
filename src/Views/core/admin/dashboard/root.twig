{% extends 'layouts/dashboard.twig' %}

{% block title %}Root Dashboard{% endblock %}
{% block page_title %}Root Dashboard{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    {# Welcome Header #}
    <div class="mb-8">
        <h1 class="text-4xl font-bold mb-2">Root Dashboard</h1>
        <p class="text-base-content/70">Platform Administration Panel</p>
    </div>

    {# Stats Cards #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-primary">
                    <i class="fa-solid fa-bolt text-2xl"></i>
                </div>
                <div class="stat-title">Total Shops</div>
                <div class="stat-value text-primary">0</div>
                <div class="stat-desc">Active stores</div>
            </div>
        </div>

        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-secondary">
                    <i class="fa-solid fa-sliders text-2xl"></i>
                </div>
                <div class="stat-title">Active Users</div>
                <div class="stat-value text-secondary">0</div>
                <div class="stat-desc">Registered users</div>
            </div>
        </div>

        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-accent">
                    <i class="fa-solid fa-bag-shopping text-2xl"></i>
                </div>
                <div class="stat-title">Packages</div>
                <div class="stat-value text-accent">0</div>
                <div class="stat-desc">Subscription packages</div>
            </div>
        </div>

        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-success">
                    <i class="fa-solid fa-dollar-sign text-2xl"></i>
                </div>
                <div class="stat-title">Revenue</div>
                <div class="stat-value text-success">$0</div>
                <div class="stat-desc">Total earnings</div>
            </div>
        </div>
    </div>

    {# Quick Actions #}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="card bg-base-100 shadow-xl">
            <div class="admin-card-body">
                <h2 class="card-title">Quick Actions</h2>
                <div class="space-y-2">
                    <a href="/admin/shops" class="btn btn-outline btn-primary w-full justify-start">
                        <i class="fa-solid fa-building text-lg mr-2"></i>
                        Manage Shops
                    </a>
                    <a href="/admin/packages" class="btn btn-outline btn-secondary w-full justify-start">
                        <i class="fa-solid fa-clipboard text-lg mr-2"></i>
                        Manage Packages
                    </a>
                    <a href="/admin/users" class="btn btn-outline btn-accent w-full justify-start">
                        <i class="fa-solid fa-users text-lg mr-2"></i>
                        Manage Users
                    </a>
                    <a href="/admin/settings" class="btn btn-outline w-full justify-start">
                        <i class="fa-solid fa-gear text-lg mr-2"></i>
                        Platform Settings
                    </a>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="admin-card-body">
                <h2 class="card-title">Recent Activity</h2>
                <div class="text-center py-8 text-base-content/50">
                    <p>No recent activity</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
