<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard{% endblock %} - Cartly Admin</title>
    
    <link rel="stylesheet" href="/assets/css/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="/assets/js/tex-editor.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (typeof tex !== 'undefined' && tex.initAll) {
                tex.initAll();
            }
        });
        document.addEventListener('alpine:init', function () {
            if (typeof tex !== 'undefined' && tex.initAll) {
                requestAnimationFrame(function () { tex.initAll(); });
            }
        });
        window.initTexEditors = function () {
            if (typeof tex !== 'undefined' && tex.initAll) tex.initAll();
        };
    </script>
    {% block head %}{% endblock %}
</head>
<body class="bg-base-200" x-data="{ sidebarOpen: true }">
    <div class="flex h-screen">
        {# Sidebar #}
        <aside 
            x-show="sidebarOpen" 
            class="admin-nav w-64 bg-base-100 border-r border-base-300 flex-shrink-0 transition-all duration-300"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 -translate-x-full"
            x-transition:enter-end="opacity-100 translate-x-0"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 translate-x-0"
            x-transition:leave-end="opacity-0 -translate-x-full"
        >
            <div class="flex flex-col h-full">
                {# Logo #}
                <div class="px-4 h-16 flex items-center border-b border-base-300">
                    <div class="flex items-center gap-2">
                        <div class="h-9 w-9 rounded-lg bg-primary/15 text-primary grid place-items-center">
                            <i class="fa-solid fa-cart-shopping text-lg"></i>
                        </div>
                        <h1 class="text-xl font-semibold text-base-content">Cartly</h1>
                    </div>
                </div>
                
                {# Navigation Menu #}
                <nav class="flex-1 overflow-y-auto px-3 py-4">
                    {% include 'partials/nav_menu.twig' %}
                </nav>
                
                {# User Info at Bottom removed #}
            </div>
        </aside>
        
        {# Main Content Area #}
        <div class="flex-1 flex flex-col overflow-hidden">
            {# Top Navigation Bar #}
            <header class="bg-base-100 border-b border-base-300">
                <div class="navbar px-4 h-16">
                    <div class="flex-none">
                        <button @click="sidebarOpen = !sidebarOpen" class="btn btn-square btn-ghost">
                            <i class="fa-solid fa-bars text-lg"></i>
                        </button>
                    </div>
                    
                    <div class="flex-1"></div>
                    
                    <div class="flex-none gap-2 flex items-center">
                        {% if shop_preview_url is defined %}
                            <a
                                href="{{ shop_preview_url }}"
                                target="_blank"
                                rel="noopener"
                                class="btn btn-outline btn-sm"
                            >
                                Preview Store
                            </a>
                        {% endif %}
                        {# User Dropdown #}
                        <div class="dropdown dropdown-end">
                            <div tabindex="0" role="button" class="btn btn-primary btn-circle btn-sm avatar placeholder">
                                <div class="bg-primary text-primary-content rounded-full w-8">
                                    <span>{{ session.user_name|default('A')|slice(0, 1)|upper }}</span>
                                </div>
                            </div>
                            <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52 border border-base-300">
                                <li class="menu-title">
                                    <span>{{ session.user_name|default('Admin User') }}</span>
                                    <span class="text-xs text-base-content/50">{{ session.user_email|default('') }}</span>
                                </li>
                                <li><a href="/admin/profile">
                                    <i class="fa-solid fa-user text-sm"></i>
                                    Profile
                                </a></li>
                                <div class="divider my-0"></div>
                                <li>
                                    <form method="POST" action="/logout" novalidate onsubmit="return confirm('Are you sure you want to logout?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token }}">
                                        <button type="submit" class="w-full flex items-center gap-2 text-left text-error">
                                            <i class="fa-solid fa-right-from-bracket text-sm"></i>
                                            Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
            
            {# Page Content #}
            <main class="flex-1 overflow-y-auto p-6">
                {% include 'partials/toast.twig' with {
                    success: success,
                    info: info,
                    warning: warning,
                    error: error
                } only %}
                {% block content %}{% endblock %}
            </main>
            <footer class="bg-base-100 border-t border-base-300 px-6 py-3 text-xs text-base-content/60">
                Â© {{ "now"|date("Y") }} Cartly. All rights reserved.
            </footer>
        </div>
    </div>
    
    {% block scripts %}{% endblock %}
</body>
</html>
