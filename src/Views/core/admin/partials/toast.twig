{# Reusable toast notifications partial
   Usage: include with variables: error, success, info, warning
   Example: {% include 'partials/toast.twig' with { error: 'Invalid login' } %}
#}

<div class="toast toast-top toast-end z-50">
  {% if success %}
    <div x-data="{ show: true }" x-show="show" x-init="setTimeout(()=>show=false, 4000)" class="alert alert-success shadow">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span>{{ success }}</span>
      <button @click="show=false" class="btn btn-xs btn-ghost">Dismiss</button>
    </div>
  {% endif %}

  {% if info %}
    <div x-data="{ show: true }" x-show="show" x-init="setTimeout(()=>show=false, 4000)" class="alert alert-info shadow">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span>{{ info }}</span>
      <button @click="show=false" class="btn btn-xs btn-ghost">Dismiss</button>
    </div>
  {% endif %}

  {% if warning %}
    <div x-data="{ show: true }" x-show="show" x-init="setTimeout(()=>show=false, 5000)" class="alert alert-warning shadow">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M12 2a10 10 0 100 20 10 10 0 000-20z" />
      </svg>
      <span>{{ warning }}</span>
      <button @click="show=false" class="btn btn-xs btn-ghost">Dismiss</button>
    </div>
  {% endif %}

  {% if error %}
    <div x-data="{ show: true }" x-show="show" x-init="setTimeout(()=>show=false, 6000)" class="alert alert-error shadow">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span>{{ error }}</span>
      <button @click="show=false" class="btn btn-xs btn-ghost">Dismiss</button>
    </div>
  {% endif %}
</div>
