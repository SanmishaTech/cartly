{% extends 'layouts/dashboard.twig' %}

{% block title %}Top Bar{% endblock %}
{% block page_title %}Top Bar{% endblock %}

{% block content %}
<div class="w-full">
    <div class="card bg-base-100 border border-base-300">
        <div class="admin-card-body">
            <h2 class="card-title mb-2">Promotional Top Bar</h2>
            <p class="text-base-content/70 mb-6">Configure a closable top bar to display offers, discounts, or important announcements on your storefront.</p>

            <form method="POST" action="/admin/setup/topbar" novalidate x-data="{
                enabled: {{ (data.topbar.enabled ?? topbar_settings.enabled) ? 'true' : 'false' }},
                message: '{{ (data.topbar.message ?? topbar_settings.message ?? '')|e('js') }}',
                backgroundColor: '{{ data.topbar.background_color ?? topbar_settings.background_color ?? '#2563eb' }}',
                textColor: '{{ data.topbar.text_color ?? topbar_settings.text_color ?? '#ffffff' }}',
                init() {
                    const input = document.getElementById('topbar_message_input');
                    if (input) {
                        input.addEventListener('input', (e) => {
                            this.message = e.target.value;
                        });
                    }
                }
            }">
                <input type="hidden" name="_token" value="{{ csrf_token }}">

                <div class="card bg-base-200/40 border border-base-300 mb-6">
                    <div class="admin-card-body">
                        <h3 class="admin-section-title mb-2">Settings</h3>
                        
                        <div class="admin-form-control mb-4">
                            <label class="label cursor-pointer justify-start gap-3">
                                <input type="checkbox" name="topbar[enabled]" value="1" class="checkbox checkbox-sm" x-model="enabled" />
                                <span class="label-text font-semibold">Enable Top Bar</span>
                            </label>
                        </div>

                        <div x-show="enabled" x-cloak>
                            <div class="admin-form-control mb-4">
                                <label class="label" for="topbar_message">
                                    <span class="label-text font-semibold">Message</span>
                                    <span class="text-error">*</span>
                                </label>
                                {% include 'partials/tex_editor.twig' with {
                                    name: 'topbar[message]',
                                    id: 'topbar_message',
                                    value: data.topbar.message ?? topbar_settings.message ?? '',
                                    required: true
                                } %}
                                {% if errors['topbar.message'] %}
                                    <label class="label">
                                        <span class="label-text-alt text-error">{{ errors['topbar.message'] }}</span>
                                    </label>
                                {% endif %}
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                <div class="admin-form-control">
                                    <label class="label" for="topbar_background_color">
                                        <span class="label-text font-semibold">Background Color</span>
                                        <span class="text-error">*</span>
                                    </label>
                                    <div class="flex gap-2">
                                        <input
                                            type="color"
                                            x-model="backgroundColor"
                                            class="h-10 w-20 rounded border border-base-300 cursor-pointer"
                                            :value="backgroundColor"
                                        />
                                        <input
                                            type="text"
                                            name="topbar[background_color]"
                                            id="topbar_background_color"
                                            x-model="backgroundColor"
                                            value="{{ data.topbar.background_color ?? topbar_settings.background_color ?? '#2563eb' }}"
                                            pattern="^#[0-9A-Fa-f]{6}$"
                                            placeholder="#2563eb"
                                            class="admin-input flex-1 {% if errors['topbar.background_color'] %}input-error{% endif %}"
                                            required
                                        />
                                    </div>
                                    {% if errors['topbar.background_color'] %}
                                        <label class="label">
                                            <span class="label-text-alt text-error">{{ errors['topbar.background_color'] }}</span>
                                        </label>
                                    {% endif %}
                                </div>

                                <div class="admin-form-control">
                                    <label class="label" for="topbar_text_color">
                                        <span class="label-text font-semibold">Text Color</span>
                                        <span class="text-error">*</span>
                                    </label>
                                    <div class="flex gap-2">
                                        <input
                                            type="color"
                                            x-model="textColor"
                                            class="h-10 w-20 rounded border border-base-300 cursor-pointer"
                                            :value="textColor"
                                        />
                                        <input
                                            type="text"
                                            name="topbar[text_color]"
                                            id="topbar_text_color"
                                            x-model="textColor"
                                            value="{{ data.topbar.text_color ?? topbar_settings.text_color ?? '#ffffff' }}"
                                            pattern="^#[0-9A-Fa-f]{6}$"
                                            placeholder="#ffffff"
                                            class="admin-input flex-1 {% if errors['topbar.text_color'] %}input-error{% endif %}"
                                            required
                                        />
                                    </div>
                                    {% if errors['topbar.text_color'] %}
                                        <label class="label">
                                            <span class="label-text-alt text-error">{{ errors['topbar.text_color'] }}</span>
                                        </label>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card bg-base-200/40 border border-base-300 mb-6" x-show="enabled" x-cloak>
                    <div class="admin-card-body">
                        <h3 class="admin-section-title mb-2">Preview</h3>
                        <div class="bg-base-300/50 rounded-lg p-4">
                            <div 
                                class="w-full px-4 py-3 flex items-center gap-4 text-sm font-medium relative"
                                :style="'background-color: ' + backgroundColor + '; color: ' + textColor + ';'"
                            >
                                <div class="flex-1 flex items-center justify-center gap-3 flex-wrap text-center">
                                    <div class="text-sm font-medium inline-block" x-html="message || 'Your message will appear here'" :style="'color: ' + textColor + ';'"></div>
                                </div>
                                <button type="button" class="absolute right-4 opacity-70 hover:opacity-100 transition-opacity p-1 cursor-pointer bg-transparent border-none outline-none" aria-label="Close" :style="'color: ' + textColor + '; background: transparent;'">
                                    <i class="fa-solid fa-times text-lg"></i>
                                </button>
                            </div>
                        </div>
                        <p class="text-sm text-base-content/60 mt-2">This is how the top bar will appear on your storefront. Customers can close it, and it will reappear in a new session.</p>
                    </div>
                </div>

                <div class="admin-form-actions">
                    <button type="submit" class="btn btn-primary btn-sm">Save Settings</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
