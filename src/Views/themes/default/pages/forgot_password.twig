{% extends 'layout.twig' %}

{% block title %}{{ shop.shop_name }} - Forgot password{% endblock %}

{% block content %}
<div class="space-y-8 p-4 md:p-8">
    <section class="bg-base-200 rounded-lg p-6 md:p-8">
        <p class="text-sm uppercase tracking-wide text-primary font-semibold">Customer</p>
        <h1 class="mt-2 text-3xl md:text-4xl font-bold">Forgot password</h1>
        <p class="mt-2 text-base-content/70">
            Password recovery for your account.
        </p>
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <div class="lg:col-span-2 lg:col-start-2 space-y-6">
            <div class="card bg-base-100 border border-base-300">
                <div class="card-body space-y-4">
                    <p class="text-base-content/70">
                        Password recovery is not yet available. Please contact support if you need help accessing your account.
                    </p>
                    <div class="flex flex-wrap gap-2">
                        <a href="/login" class="btn btn-primary">Back to login</a>
                        <a href="/" class="btn btn-ghost btn-sm">Continue shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
