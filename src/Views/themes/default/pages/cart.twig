{% extends 'layout.twig' %}

{% block title %}{{ shop.shop_name }} - Cart{% endblock %}

{% block content %}
<div class="space-y-8 p-4 md:p-8">
    <section class="bg-base-200 rounded-lg p-6 md:p-8">
        <p class="text-sm uppercase tracking-wide text-primary font-semibold">Cart</p>
        <h1 class="mt-2 text-3xl md:text-4xl font-bold">Your cart</h1>
        <p class="mt-2 text-base-content/70">
            Placeholder cart view. Checkout will be enabled once payments are configured.
        </p>
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-4">
            {% for item in cart_items %}
                <div class="card bg-base-100 border border-base-300">
                    <div class="card-body flex flex-col md:flex-row md:items-center gap-4">
                        <div class="h-20 w-20 rounded-lg bg-base-200 flex items-center justify-center text-base-content/50">
                            IMG
                        </div>
                        <div class="flex-1">
                            <h3 class="font-semibold">{{ item.name }}</h3>
                            <p class="text-sm text-base-content/70">Size: M • Color: Black</p>
                            <p class="text-primary font-semibold mt-1">{{ item.price }}</p>
                        </div>
                        <div class="flex items-center gap-3">
                            <button class="btn btn-sm btn-outline" disabled>-</button>
                            <span class="font-semibold">{{ item.qty }}</span>
                            <button class="btn btn-sm btn-outline" disabled>+</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="card bg-base-100 border border-base-300">
            <div class="card-body space-y-4">
                <h2 class="card-title">Order summary</h2>
                <div class="flex justify-between text-sm text-base-content/70">
                    <span>Subtotal</span>
                    <span>₹2,698</span>
                </div>
                <div class="flex justify-between text-sm text-base-content/70">
                    <span>Delivery</span>
                    <span>₹0</span>
                </div>
                <div class="divider"></div>
                <div class="flex justify-between font-semibold">
                    <span>Total</span>
                    <span>₹2,698</span>
                </div>
                <button class="btn btn-primary w-full" disabled>
                    Proceed to checkout (coming soon)
                </button>
                <p class="text-xs text-base-content/60 text-center">
                    Payments and checkout will be enabled after setup.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
