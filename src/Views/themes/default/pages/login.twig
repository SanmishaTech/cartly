{% extends 'layout.twig' %}

{% block title %}{{ shop.shop_name }} - Login{% endblock %}

{% block content %}
<div class="space-y-8 p-4 md:p-8">
    <section class="bg-base-200 rounded-lg p-6 md:p-8">
        <p class="text-sm uppercase tracking-wide text-primary font-semibold">Customer</p>
        <h1 class="mt-2 text-3xl md:text-4xl font-bold">Login</h1>
        <p class="mt-2 text-base-content/70">
            Sign in to your account.
        </p>
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <div class="lg:col-span-2 lg:col-start-2 space-y-6">
            <div class="card bg-base-100 border border-base-300">
                <div class="card-body space-y-4">
                    {% set err = errors ?? {} %}
                    {% if err.email or err.password or err.oauth %}
                    <div class="p-3 rounded-lg bg-error/10 text-error text-sm">
                        {{ err.oauth ?? err.email ?? err.password }}
                    </div>
                    {% endif %}

                    <form method="post" action="/login" class="flex flex-col space-y-4">
                        <input type="hidden" name="_token" value="{{ csrf_token }}">
                        <div>
                            <label for="login_email" class="label">
                                <span class="label-text font-medium">Email</span>
                            </label>
                            <input
                                type="email"
                                id="login_email"
                                name="email"
                                value="{{ old.email ?? '' }}"
                                class="input input-bordered w-full {% if err.email %}input-error{% endif %}"
                                required
                                autocomplete="email"
                            />
                        </div>
                        <div>
                            <label for="login_password" class="label">
                                <span class="label-text font-medium">Password</span>
                            </label>
                            <input
                                type="password"
                                id="login_password"
                                name="password"
                                class="input input-bordered w-full {% if err.password %}input-error{% endif %}"
                                required
                                autocomplete="current-password"
                            />
                            <p class="mt-1 text-sm">
                                <a href="/forgot-password" class="link link-primary">Forgot password?</a>
                            </p>
                        </div>
                        <button type="submit" class="btn btn-primary w-full">Sign in</button>
                    </form>

                    <p class="text-sm text-base-content/70">
                        Don't have an account? <a href="/register" class="link link-primary font-medium">Register</a>
                    </p>
                </div>
            </div>

            {% set oauth = oauth_config ?? {} %}
            {% if (oauth.google.enabled|default(false)) or (oauth.facebook.enabled|default(false)) %}
            <div class="card bg-base-100 border border-base-300">
                <div class="card-body space-y-4">
                    <h2 class="card-title text-lg">Or sign in with</h2>
                    <div class="flex flex-col gap-2">
                        {% if oauth.google.enabled|default(false) %}
                        <a href="/auth/google" class="btn btn-outline gap-2">Login with Google</a>
                        {% endif %}
                        {% if oauth.facebook.enabled|default(false) %}
                        <a href="/auth/facebook" class="btn btn-outline gap-2">Login with Facebook</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endif %}

            <div>
                <a href="/" class="btn btn-ghost btn-sm">Continue shopping</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
