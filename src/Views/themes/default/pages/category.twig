{% extends 'layout.twig' %}

{% block title %}{{ shop.shop_name }} - {{ category.name }}{% endblock %}

{% block content %}
<div class="space-y-8 p-4 md:p-8">
    <nav class="text-sm breadcrumbs">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/categories">Categories</a></li>
            <li>{{ category.name }}</li>
        </ul>
    </nav>

    <section class="bg-base-200 rounded-lg p-6 md:p-8">
        <p class="text-sm uppercase tracking-wide text-primary font-semibold">Category</p>
        <h1 class="mt-2 text-3xl md:text-4xl font-bold">{{ category.name }}</h1>
        <p class="mt-2 text-base-content/70">{{ category.description }}</p>
    </section>

    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
        {% for product in products %}
            {% include 'partials/product_card.twig' with { product: product } only %}
        {% endfor %}
    </div>
</div>
{% endblock %}
