<header class="shadow-sm bg-base-100" x-data="{ mobileMenuOpen: false }">
    <div class="navbar max-w-6xl mx-auto px-4">
        <div class="navbar-start">
            <a href="/" class="flex items-center gap-3 text-base-content h-9 md:h-11">
                {% if shop.logo_path %}
                    <img
                        src="/media/{{ shop.logo_path }}"
                        alt="{{ shop.shop_name }} logo"
                        class="h-9 md:h-11 max-w-[140px] md:max-w-[180px] w-auto object-contain"
                        loading="lazy"
                    />
                {% endif %}
                <span class="text-2xl font-bold">{{ shop.shop_name }}</span>
            </a>
        </div>

        {% set menus = menus ?? {} %}
        {% set header_links = menus.header ?? [] %}
        <nav class="navbar-center hidden md:flex" aria-label="Primary">
            {% if header_links|length %}
                <ul class="menu menu-horizontal gap-2">
                    {% for link in header_links %}
                        <li><a href="{{ link.url }}" class="{{ is_active_path(link.url) ? 'active' : '' }}">{{ link.label }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </nav>

        <div class="navbar-end gap-2">
            {% if customer.id %}
            <span class="text-sm text-base-content/70 hidden sm:inline">Welcome, {{ customer.name|default(customer.email) }}</span>
            <a href="/account" class="btn btn-ghost btn-sm">Account</a>
            <form method="post" action="/logout" class="inline" onsubmit="return confirm('Sign out?');">
                <input type="hidden" name="_token" value="{{ csrf_token }}">
                <button type="submit" class="btn btn-ghost btn-sm">Logout</button>
            </form>
            {% else %}
            <a href="/login" class="btn btn-ghost btn-sm">Login</a>
            <a href="/register" class="btn btn-primary btn-sm">Register</a>
            {% endif %}
            <a href="/cart" class="btn btn-ghost btn-circle">
                <i class="fa-solid fa-cart-shopping text-xl"></i>
            </a>

            <div class="dropdown dropdown-end md:hidden">
                <label tabindex="0" class="btn btn-ghost btn-circle" @click="mobileMenuOpen = !mobileMenuOpen">
                    <i class="fa-solid fa-bars text-xl"></i>
                </label>
                <nav aria-label="Mobile">
                    <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52" x-show="mobileMenuOpen">
                        {% if customer.id %}
                        <li><span class="px-4 py-2 text-sm text-base-content/70">Welcome, {{ customer.name|default(customer.email) }}</span></li>
                        <li><a href="/account">Account</a></li>
                        <li>
                            <form method="post" action="/logout"><input type="hidden" name="_token" value="{{ csrf_token }}"><button type="submit" class="text-left w-full px-4 py-2 text-error">Logout</button></form>
                        </li>
                        {% else %}
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Register</a></li>
                        {% endif %}
                        <li><a href="/cart">Cart</a></li>
                        {% if header_links|length %}
                            {% for link in header_links %}
                                <li><a href="{{ link.url }}" class="{{ is_active_path(link.url) ? 'active' : '' }}">{{ link.label }}</a></li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
