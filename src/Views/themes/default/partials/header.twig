<header class="shadow-sm bg-base-100" x-data="{ mobileMenuOpen: false }">
    <div class="navbar max-w-6xl mx-auto px-4">
        <div class="navbar-start">
            <a href="/" class="flex items-center gap-3 text-base-content h-9 md:h-11">
                {% if shop.logo_path %}
                    <img
                        src="/media/{{ shop.logo_path }}"
                        alt="{{ shop.shop_name }} logo"
                        class="h-9 md:h-11 max-w-[140px] md:max-w-[180px] w-auto object-contain"
                        loading="lazy"
                    />
                {% endif %}
                <span class="text-2xl font-bold">{{ shop.shop_name }}</span>
            </a>
        </div>

        {% set menus = menus ?? {} %}
        {% set header_links = menus.header ?? [] %}
        <nav class="navbar-center hidden md:flex" aria-label="Primary">
            {% if header_links|length %}
                <ul class="menu menu-horizontal gap-2">
                    {% for link in header_links %}
                        <li><a href="{{ link.url }}" class="{{ is_active_path(link.url) ? 'active' : '' }}">{{ link.label }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </nav>

        <div class="navbar-end gap-2">
            <a href="/cart" class="btn btn-ghost btn-circle">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </a>

            <div class="dropdown dropdown-end md:hidden">
                <label tabindex="0" class="btn btn-ghost btn-circle" @click="mobileMenuOpen = !mobileMenuOpen">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </label>
                <nav aria-label="Mobile">
                    {% if header_links|length %}
                        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52" x-show="mobileMenuOpen">
                            {% for link in header_links %}
                                <li><a href="{{ link.url }}" class="{{ is_active_path(link.url) ? 'active' : '' }}">{{ link.label }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </nav>
            </div>
        </div>
    </div>
</header>
