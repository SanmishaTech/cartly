<section class="hero bg-base-200 rounded-lg shadow-sm overflow-hidden">
    <div class="hero-content flex-col lg:flex-row gap-8 py-10">
        <div class="w-full lg:w-1/2">
            <div class="aspect-video rounded-xl bg-base-300 flex items-center justify-center text-base-content/50">
                Product Image Placeholder
            </div>
        </div>
        <div class="w-full lg:w-1/2">
            <p class="text-sm uppercase tracking-wide text-primary font-semibold">
                {{ hero_settings.kicker ?? 'New season arrivals' }}
            </p>
            <h1 class="mt-3 text-4xl md:text-5xl font-bold">
                {{ hero_settings.headline ?? ('Welcome to ' ~ shop.shop_name) }}
            </h1>
            <p class="mt-4 text-lg text-base-content/70">
                {{ hero_settings.subheadline ?? 'Discover curated essentials with fast delivery and secure checkout.' }}
            </p>
            <div class="mt-6 flex flex-wrap gap-3">
                <a href="{{ hero_settings.cta_url ?? '/products' }}" class="btn btn-primary">
                    {{ hero_settings.cta_label ?? 'Shop Now' }}
                </a>
                <a href="/categories" class="btn btn-outline btn-primary">
                    Browse Categories
                </a>
            </div>
        </div>
    </div>
</section>
