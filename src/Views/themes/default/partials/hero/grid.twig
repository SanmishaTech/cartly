{% set hero_categories = hero_settings.categories ?? [
    { 'name': 'Electronics', 'slug': 'electronics' },
    { 'name': 'Fashion', 'slug': 'fashion' },
    { 'name': 'Home & Living', 'slug': 'home-living' },
    { 'name': 'Beauty', 'slug': 'beauty' }
] %}

<section class="rounded-lg bg-base-200 shadow-sm p-8 md:p-10">
    <div class="flex flex-col lg:flex-row gap-8 items-start">
        <div class="lg:w-1/3">
            <p class="text-sm uppercase tracking-wide text-primary font-semibold">
                {{ hero_settings.kicker ?? 'Shop by category' }}
            </p>
            <h1 class="mt-3 text-4xl md:text-5xl font-bold">
                {{ hero_settings.headline ?? 'Explore trending collections' }}
            </h1>
            <p class="mt-4 text-lg text-base-content/70">
                {{ hero_settings.subheadline ?? 'Start with our best curated categories picked for you.' }}
            </p>
            <a href="/categories" class="btn btn-primary mt-6">View All Categories</a>
        </div>
        <div class="lg:w-2/3 grid grid-cols-2 md:grid-cols-2 gap-4 w-full">
            {% for category in hero_categories %}
                <a href="/categories/{{ category.slug }}" class="card bg-base-100 border border-base-300 hover:shadow-md transition-shadow">
                    <div class="card-body">
                        <div class="h-12 w-12 rounded-full bg-primary/10 text-primary flex items-center justify-center">
                            ðŸ“¦
                        </div>
                        <h2 class="card-title text-lg">{{ category.name }}</h2>
                        <p class="text-sm text-base-content/60">Browse curated picks</p>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</section>
