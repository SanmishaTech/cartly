{% set variant = block.variant ?? 'image_left' %}
<section class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
    {% if variant == 'image_right' %}
        <div class="space-y-3 order-2 lg:order-1">
            {% if data.title %}
                <h2 class="text-2xl font-semibold">{{ data.title }}</h2>
            {% endif %}
            <div class="prose max-w-none text-base-content">
                {{ data.html|default('')|raw }}
            </div>
        </div>
        <div class="order-1 lg:order-2">
            <img src="/media/{{ data.image }}" alt="{{ data.alt }}" class="w-full rounded-xl border border-base-300 object-cover">
        </div>
    {% else %}
        <div>
            <img src="/media/{{ data.image }}" alt="{{ data.alt }}" class="w-full rounded-xl border border-base-300 object-cover">
        </div>
        <div class="space-y-3">
            {% if data.title %}
                <h2 class="text-2xl font-semibold">{{ data.title }}</h2>
            {% endif %}
            <div class="prose max-w-none text-base-content">
                {{ data.html|default('')|raw }}
            </div>
        </div>
    {% endif %}
</section>
