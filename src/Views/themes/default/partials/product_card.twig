<article class="product-card card bg-base-100 border border-base-300 shadow-sm hover:shadow-lg transition-shadow">
    <figure class="bg-base-200 h-48 flex items-center justify-center text-base-content/40">
        Product Image
    </figure>
    <div class="card-body">
        <div class="flex items-center justify-between">
            <h3 class="card-title text-lg">{{ product.name }}</h3>
            {% if product.badge %}
                <span class="badge badge-outline">{{ product.badge }}</span>
            {% endif %}
        </div>
        <p class="text-base-content/70 text-sm">Short description placeholder for this product.</p>
        <div class="card-actions justify-between items-center mt-4">
            <span class="text-2xl font-bold text-primary">{{ product.price }}</span>
            <a href="/products/{{ product.slug }}" class="btn btn-primary btn-sm">View</a>
        </div>
    </div>
</article>
