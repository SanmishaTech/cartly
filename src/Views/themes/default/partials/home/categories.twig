{% set category_limit = section.limit ?? 4 %}
<section>
    <div class="space-y-1 mb-8">
        <h2 class="text-3xl font-bold text-base-content">{{ content.categories.title ?? 'Shop by Category' }}</h2>
        <p class="text-base text-base-content/70">{{ content.categories.subtitle ?? '' }}</p>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {% for category in category_labels|slice(0, category_limit) %}
        <a href="/category/{{ category|lower }}" class="btn btn-outline btn-primary h-auto flex-col p-6 gap-2 rounded-lg hover:bg-primary hover:text-primary-content">
            <div class="text-4xl">ðŸ“¦</div>
            <h3 class="font-semibold text-base">{{ category }}</h3>
        </a>
        {% endfor %}
    </div>
</section>
