<section>
    <div class="card bg-base-200/60 border border-base-300 text-base-content shadow-sm">
        <div class="card-body">
            {% if content.promo.badge %}
                <p class="text-sm uppercase tracking-wide text-base-content/70">{{ content.promo.badge }}</p>
            {% endif %}
            <h3 class="text-2xl font-semibold">{{ content.promo.title ?? '' }}</h3>
            {% if content.promo.body %}
                <div class="text-base-content/80 prose prose-sm max-w-none prose-p:my-1">{{ content.promo.body|raw }}</div>
            {% endif %}
            {% if content.promo.cta_text and content.promo.cta_link %}
                <div class="card-actions">
                    <a class="btn btn-primary" href="{{ content.promo.cta_link }}">{{ content.promo.cta_text }}</a>
                </div>
            {% endif %}
        </div>
    </div>
</section>
