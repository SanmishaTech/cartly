{% extends 'layout.twig' %}

{% block content %}
<div class="min-h-screen flex flex-col justify-center items-center bg-base-100">
    <section class="text-center mb-24 px-4">
        <h1 class="text-6xl md:text-8xl font-black mb-6 text-base-content">
            {{ shop.shop_name }}
        </h1>
        <p class="text-2xl text-base-content/60 mb-12">Modern ecommerce reimagined</p>
        <a href="/products" class="btn btn-primary btn-lg rounded-full text-lg font-bold">
            Explore Collection
        </a>
    </section>
    
    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 px-4 max-w-7xl w-full pb-12">
        {% for i in 1..4 %}
        <div class="group cursor-pointer">
            <div class="aspect-square bg-base-200 rounded-2xl mb-4 group-hover:bg-base-300 transition flex items-center justify-center border border-base-300">
                <span class="text-base-content/40 text-sm">Product Image</span>
            </div>
            <h3 class="text-xl font-bold mb-2 text-base-content">Product {{ i }}</h3>
            <p class="text-primary font-semibold">â‚¹999</p>
        </div>
        {% endfor %}
