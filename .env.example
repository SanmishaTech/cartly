APP_NAME=Cartly
APP_ENV=local
APP_DEBUG=true
APP_DOMAIN=cartly.test
APP_URL=http://cartly.test:8000

# India Localization
APP_TIMEZONE=Asia/Kolkata
APP_LOCALE=en_IN
APP_COUNTRY=India

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cartly
DB_USERNAME=root
DB_PASSWORD=

# SMTP Configuration (Brevo)
SMTP_HOST="smtp-relay.brevo.com"
SMTP_PORT="587"
SMTP_USERNAME="apikey"
SMTP_PASSWORD=""
SMTP_ENCRYPTION=tls
SMTP_FROM_ADDRESS="no-reply@cartly.com"
SMTP_FROM_NAME="Cartly"

# Email limits (per shop, transactional only)
EMAIL_DAILY_LIMIT_PER_SHOP=50
EMAIL_MONTHLY_LIMIT_PER_SHOP=

# JWT Configuration (Optional)
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# GST Configuration (Goods & Services Tax)
GST_RATE=18
GST_ENABLED=true

# Date Format
DATE_FORMAT=d/m/Y
DATETIME_FORMAT='d/m/Y h:i a'
TIME_FORMAT=H:i:s

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-south-1"
AWS_S3_BUCKET="sanmisha.bucket.cartly"