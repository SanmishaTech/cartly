APP_NAME=Cartly
APP_ENV=local
APP_DEBUG=true
APP_DOMAIN=cartly.test
APP_URL=http://cartly.test:8000

# India Localization
APP_TIMEZONE=Asia/Kolkata
APP_LOCALE=en_IN
APP_COUNTRY=India

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cartly
DB_USERNAME=root
DB_PASSWORD=

# SMTP Configuration
SMTP_HOST="smtp-relay.brevo.com"
SMTP_PORT="587"
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_ENCRYPTION=tls
SMTP_FROM_ADDRESS="noreply@sanmishatech.com"
SMTP_FROM_NAME="Cartly"

# JWT Configuration (Optional)
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# GST Configuration (Goods & Services Tax)
GST_RATE=18
GST_ENABLED=true

# Date Format
DATE_FORMAT=d/m/Y
DATETIME_FORMAT='d/m/Y h:i a'
TIME_FORMAT=H:i:s